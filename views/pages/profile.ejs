<%- include('../partials/header') %>
<div class="profile-page">
  <div class="profile-page--banner"></div>
  <div class="profile-page__user">
    <img class="profile-page__user--avatar" src="<%= user.avatarUrl %>">
    <h2> <%= user.name %> </h1>
  </div>
  <div class="profile-page__friends">
    <h3><%= user.name %>'s Friends</h3>
    <ul class="profile-page__friends--list">
      <!-- loop over the array of friends -->
      <!-- each friend's image and name should be visible. -->
      <% user['friends'].forEach(friend => { %>
        <% let friendData = users.find((user) => user._id === friend); %>
        <li class="friend">
          <img src="<%= friendData.avatarUrl %>" alt="<%= friendData.name %> Profile Pic"/>
          <p> <%- friendData.name %> </p>
        </li>
      <% }) %>
    </ul>
  </div>
</div>

<%- include('../partials/footer') %>